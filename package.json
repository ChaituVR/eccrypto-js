{
  "name": "eccrypto-js",
  "description": "Elliptic curve cryptography library (NodeJS, Browser and Pure JS)",
  "version": "1.2.0",
  "author": "Pedro Gomes <github.com/pedrouid>",
  "license": "MIT",
  "keywords": [
    "ecc",
    "ecdsa",
    "ecdh",
    "ecies",
    "crypto",
    "cryptography",
    "secp256k1",
    "K-256",
    "elliptic",
    "curve"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/eccrypto-js.esm.js",
  "homepage": "https://github.com/pedrouid/eccrypto-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrouid/eccrypto-js.git"
  },
  "bugs": {
    "url": "https://github.com/pedrouid/eccrypto-js/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "ECCRYPTO_NO_FALLBACK=true tsdx test",
    "lint": "tsdx lint src test",
    "prepare": "yarn lint && yarn build && yarn test"
  },
  "dependencies": {
    "@ethersproject/bytes": "5.0.0-beta.136",
    "@ethersproject/random": "5.0.0-beta.133",
    "@ethersproject/sha2": "5.0.0-beta.134",
    "aes-js": "3.1.2",
    "js-sha3": "0.8.0",
    "secp256k1": "3.8.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.0.22",
    "@types/aes-js": "3.1.0",
    "@types/eccrypto": "1.1.1",
    "@types/jest": "25.1.1",
    "@types/node": "13.7.0",
    "eccrypto": "1.1.3",
    "husky": "4.2.1",
    "tsdx": "0.12.3",
    "tslib": "1.10.0",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
